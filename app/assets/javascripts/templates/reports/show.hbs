<div class="stripe white-stripe report-title report-summary">
  <div class="waistcoat">
    <a class="btn-close" href="/">Back</a>
    
    <h2 class="report-name {{#unless readonly}}inline-edit{{/unless}}">{{report/name}}</h2>
    
    <div class="report-author">
      Created by
      {{{avatar report/author/email 18 report/author/name}}}
      <span class="report-author-name">{{report/author/name}}</span>
      <span class="report-age">{{{timeago report/created}}}</span>
    </div>
    
    {{#unless mobile}}
    <a href="/reports/{{report/id}}/copy" class="btn btn-default btn-xs">
      <i class="fa fa-files-o"></i> Copy
    </a>
    
    <button id="toggle_report_query" type="button" class="btn btn-default btn-xs {{#unless readonly}}active{{/unless}}" data-toggle="button" aria-pressed="false" autocomplete="off">
      Show query
    </button>
    {{/unless}}
  </div>
</div>

<div class="stripe report-query {{#unless readonly}}expanded{{/unless}}" id="report_query_container">
  <div id="report_query" class="waistcoat"></div>
</div>

<div class="stripe white-stripe report-results">
  <div id="results" class="waistcoat">
    {{#unless report/results}}
      <i class="fa fa-circle-o-notch fa-spin"></i>
    {{/unless}}
  </div>
  <div class="report-results-info">
    Performed
    <span id="report_performed" class="report-performed">{{{timeago report/performed}}}</span>
  </div>
  
  <a href="/reports/{{report/id}}/perform" id="refresh_results_button" class="btn btn-default btn-xs">
    <i class="fa fa-refresh"></i> Refresh
  </a>
</div>

{{#unless readonly}}
<div class="stripe white-stripe buttons">
  <div class="waistcoat">
    <button id="delete_report" class="btn btn-danger btn-xs">Delete this query</button>
  </div>
</div>
{{/unless}}
